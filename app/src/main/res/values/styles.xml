<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlacePickerAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="PlacePickerCard">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <style name="PlacePickerCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="RatingBarfeed" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#ffd900</item>
    </style>

</resources>
